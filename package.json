{
  "name": "plan3-online-sales-wechat",
  "private": true,
  "version": "0.3.0",
  "type": "module",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm --filter frontend build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "test": "pnpm --filter frontend test",
    "test:frontend": "pnpm --filter frontend test:all",
    "test:frontend:unit": "pnpm --filter frontend test:unit:run",
    "test:frontend:storybook": "pnpm --filter frontend test:storybook:run",
    "test:backend": "pnpm --filter backend test",
    "lint": "pnpm --filter frontend lint && pnpm --filter backend lint",
    "clean": "pnpm --filter frontend clean && pnpm --filter backend clean",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "playwright": "^1.53.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "playwright-core": "^1.54.1"
  }
}