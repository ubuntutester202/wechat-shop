# .env.example
# This file contains all the environment variables needed by the application.
# Copy this file to .env.dev and fill in the actual values.
# The .env.dev file is not committed to version control.

# PostgreSQL Database Configuration
# These variables are used by the 'postgres' service in docker-compose.yml
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=plan3

# Backend Application Configuration
# This variable is used by the 'backend' service (NestJS application)
# It must match the credentials and database name defined above.
DATABASE_URL="postgresql://user:password@postgres:5432/plan3?schema=public"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key"

# WeChat Pay Configuration
# Set to 'mock' for development, 'real' for production
WECHAT_PAY_MODE="mock"
WECHAT_PAY_APP_ID="your-wechat-app-id"
WECHAT_PAY_MCH_ID="your-merchant-id"
WECHAT_PAY_API_KEY="your-api-key"
WECHAT_PAY_CERT_PATH="path/to/cert.pem"
WECHAT_PAY_KEY_PATH="path/to/key.pem"
WECHAT_PAY_NOTIFY_URL="http://localhost:3000/pay/wxpay/notify"